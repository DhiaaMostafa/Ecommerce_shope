html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Document
    include HTML/pug/linker.pug
  body
    div(class="header")
    div(class="Product-Details")
     div(class="main_container")
      //- image display on dot image slider
      div(class="row-detail")
        div(class="image-detail")
          img(src="img/twemen.png")
          i(class="fa fa-chevron-left fa-lg")
          i(class="fa fa-chevron-right fa-lg")
        //- dot image slider  
        div(class="slick-dot-image")
          
            img(src="img/twemen.png" class="selected")
            img(src="img/22.png")
            img(src="img/tt.jpg")



      // infromation aboat prodect 
      div(class="row-detail")
        div(class="detail-size-color-text")
          h2 MENEssential Tee
          p Black
          P(class="price-detail") 
            
          p(class="star-detail")
            i(class="ti-star")
            i(class="ti-star")
            i(class="ti-star")
            i(class="ti-star")
            i(class="ti-star")
            
          - var color=[ "red","blue","green" ,"gold","yellow"]
          -var size=['s','l','ml','xl','xxl']
        div(class="detail-size-color-text")
          p Black

          p(class="color-detl")
            each val in color
              a(href="#" class='color-linker' style="background:"+val+";")
          div(class="clearflex")

          p(class="size-detl")
            each vall ,index in color
              a(href="#" class='size-linker' style="background:"+vall+";")=size[index]

          div(class="number-dot input_card_number")
            input(type="text" value="1")
          button(class="btn-submit")  Add to car
           - var num_immage=['tt' , 'tt' , 'tt', 'tt']
    
